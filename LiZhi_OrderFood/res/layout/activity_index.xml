<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9ec"
    tools:context=".MainActivity" >
        <RelativeLayout
	        android:id="@+id/layout_title_bar"
	        android:layout_width="match_parent"
	        android:background="@drawable/login_header_bg"
	        android:layout_height="wrap_content">
			<Button 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:background="@drawable/back_btn"
			    android:id="@+id/back_btn"/>
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:src="@drawable/home_logo"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_marginRight="20dp"
	            android:src="@drawable/phone"
	            android:id="@+id/feekback"
	            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_tab_bg"
        android:orientation="horizontal"
        android:id="@+id/home_tab_layout"
        android:gravity="center_vertical"
        android:descendantFocusability="blocksDescendants"
        android:layout_below="@id/layout_title_bar">
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/setting_layout">
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerInParent="true"
		        >
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/setting_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="设置"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>
		    </LinearLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/pos_layout">
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerInParent="true"
		        >
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/pos_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="POS管理"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>
		    </LinearLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/order_layout">
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:id="@+id/order"
		        android:layout_centerInParent="true"
		        >
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/order_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="订单"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>
		    </LinearLayout>
		    
		    <TextView 
			    android:id="@+id/order_hint"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:layout_toRightOf="@id/order"
			    android:visibility="gone"
			    android:background="@drawable/hint_bg"/>
		    
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/message_layout">
		<LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:id="@+id/message"
		        android:layout_centerInParent="true">
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/message_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="通知"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>

		    </LinearLayout>
		    
			<TextView 
			    android:id="@+id/message_hint"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentTop="true"
			    android:textColor="@color/white"
			    android:textSize="13sp"
			    android:visibility="gone"
			    android:gravity="center"
			    android:layout_toRightOf="@id/message"
			    android:background="@drawable/hint_bg"/>
			
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:id="@+id/member_layout">
	        <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerInParent="true"
		        >
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/member_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="会员"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>
		    </LinearLayout>
	    </RelativeLayout>
	    <RelativeLayout 
	        android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        
	        android:id="@+id/system_layout">
		    <LinearLayout 
		        android:orientation="vertical"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerInParent="true">
		        <ImageView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:id="@+id/system_btn"/>
		        <TextView 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="账户"
		            android:textSize="20sp"
		            android:textColor="#b17900"/>
		    </LinearLayout>
		</RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_tab_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/main_bg"
                android:layout_weight="1" />
            
            <RelativeLayout 
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">
	                
	            <LinearLayout
	                android:id="@+id/group"
	                android:layout_width="fill_parent"
	                android:layout_height="30dp"
	                android:gravity="center_horizontal"
	                android:orientation="horizontal"
	                 android:visibility="gone"
	                 >
	            </LinearLayout>
				<TextView 
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="#866007"
				    android:textSize="18sp"
				    android:id="@+id/customer"
				    android:layout_centerVertical="true"
				    android:layout_marginLeft="10dp"/>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/layout_network_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/reload_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_reload" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/layout_progress_dialog" />

</RelativeLayout>