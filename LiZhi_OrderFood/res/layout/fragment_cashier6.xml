<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="商品入库信息"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text" />

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="条形码" />

        <EditText
            android:id="@+id/et_stock_barcode"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请扫描或输入条形码"
            android:inputType="number"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="名称" />

        <EditText
            android:id="@+id/et_stock_name"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品名称"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="规格" />

        <EditText
            android:id="@+id/et_stock_size"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品规格"
            
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stock_status"
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="上/下架" />

        <TextView
            android:id="@+id/tv_stock_status"
            style="@style/stock_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="上架" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stock_type"
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="商品类型" />

        <TextView
            android:id="@+id/tv_stock_type"
            style="@style/stock_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1.0"
            android:gravity="left"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="进货价" />

        <EditText
            android:id="@+id/et_stock_priceIn"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品进货价"
            
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="售价" />

        <EditText
            android:id="@+id/et_stock_salePrice"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品售价"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_stock"
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="库存数量" />

        <EditText
            android:id="@+id/et_stock_stock"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品库存数量"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        style="@style/layout_stock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_stock_newNum"
            style="@style/stock_text"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            android:text="库存数量" />

        <EditText
            android:id="@+id/et_stock_newNum"
            style="@style/stock_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品新增数量"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="15dp"
        android:background="@color/light_gray"
        android:orientation="horizontal"
        android:paddingTop="1dp" >

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FF880D"
            android:textSize="@dimen/small_text" />
    </LinearLayout>

</LinearLayout>