<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.pos.lizhimain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" xmlns:app1="http://schemas.android.com/apk/res/com.pos.lizhiorder">
	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        android:background="@color/item_title_color">
    <RadioGroup 
        android:layout_marginLeft="50dp"
        android:id="@+id/rg_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
         <RadioButton 
            android:id="@+id/rb_member_list"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="100dp"
            android:text="查询会员"
            android:textColor="@color/radio_text_selector"
	        android:textSize="@dimen/normal_text"
            android:button="@null"
            android:gravity="center"/>
        <RadioButton 
            android:id="@+id/rb_member_add"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="100dp"
            android:text="添加会员"
            android:textColor="@color/radio_text_selector"
	        android:textSize="@dimen/normal_text"
            android:button="@null"
            android:gravity="center"/>
       
    </RadioGroup>
    <EditText android:id="@+id/et_order_search"
            android:layout_gravity="right|center_vertical"
            android:layout_width="250dp"
            android:layout_height="72dp"
            android:background="@drawable/bg_edit_round"
            android:textSize="@dimen/normal_text"
            android:hint="查找会员"
            android:layout_marginRight="50dp"
            android:textColorHint="@color/gray"
            android:inputType="number"/>
	 <com.lizhi.widget.UnderlinePageIndicator 
	    	android:layout_marginLeft="50dp"
    	    android:id="@+id/indicator_member"
    	    android:layout_width="240dp"
    	    android:layout_height="4dp"
    	    android:layout_gravity="bottom"
    	    app1:fades="false"
    	    app1:selectedColor="#FF880D"/> 
	</FrameLayout>
	<android.support.v4.view.ViewPager
        android:id="@+id/vp_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>