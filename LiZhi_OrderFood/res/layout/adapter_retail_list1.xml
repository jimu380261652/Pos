<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_retail_item"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_pro_barCode"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="3" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_name"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="4" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_price"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2.5"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_stock"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="3.5"
        android:gravity="center_vertical|right"
        android:paddingLeft="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_buy"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="3.5"
        android:gravity="center_vertical|right|center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:textColor="@color/red"
        android:textSize="18sp" />

</LinearLayout>