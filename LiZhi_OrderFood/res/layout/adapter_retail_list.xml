<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_retail_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_pro_id"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_name"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.0" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.0"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_price"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.0"
        android:gravity="center_vertical|right"
        android:paddingLeft="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_discount"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.0"
        android:gravity="center"
        android:orientation="horizontal" >

      

        <ImageView
            android:id="@+id/iv_pro_decrease"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
           	android:src="@drawable/ic_subtract"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_pro_number"
            style="@style/business_item_title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8" />

        <ImageView
            android:src="@drawable/ic_add"
            android:id="@+id/iv_pro_increase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:scaleType="fitXY" />
       
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_stock"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.0"
        android:gravity="center_vertical|right"
        android:paddingLeft="8dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_total"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4.0"
        android:gravity="center_vertical|right"
        android:paddingLeft="10dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/light_gray" />

    <TextView
        android:id="@+id/tv_pro_del"
        style="@style/business_item_title_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:text=""
        android:textColor="@color/light_red" />

</LinearLayout>