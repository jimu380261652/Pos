<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    >
    <RelativeLayout
        android:id="@+id/layout_title_bar"
        android:layout_width="match_parent"
        android:background="@drawable/bg_touming"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/title_bar_tv"
            android:text="李子收银系统"
            android:textColor="@color/white"
            android:padding="20dp"
            android:textSize="30dp" />
    </RelativeLayout>
   	<LinearLayout 
   	    android:layout_marginLeft="100dp"
   	    android:id="@+id/layout_one"
   	    android:layout_marginTop="120dp"
   	    android:layout_below="@+id/layout_title_bar"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical"
   	    >
   	    <LinearLayout 
   	       android:layout_width="match_parent"
   	       android:layout_height="0dp"
   	       android:layout_weight="1"
   	        android:orientation="horizontal"
   	        >
   	        <ImageView 
   	            android:scaleType="center"
   	            android:id="@+id/iv_account"
   	            android:layout_width="wrap_content"
   	            android:layout_height="match_parent"
   	            android:layout_marginRight="10dp"
   	            android:src="@drawable/home_account_selector"
   	            />
   	        <ImageView 
   	         
   	            android:id="@+id/iv_mem"
   	            android:layout_width="wrap_content"
   	            android:layout_height="match_parent"
   	            android:src="@drawable/home_mem_selector"
   	            />
   	    </LinearLayout>
   	    <ImageView 
   	        android:id="@+id/iv_order"
   	        android:layout_width="match_parent"
   	        android:layout_weight="1"
   	        android:layout_height="0dp"
   	     	android:layout_marginTop="10dp"
   	        android:src="@drawable/home_order_selector"
   	        />
   	</LinearLayout>
   	<ImageView 
   	    android:layout_alignTop="@+id/layout_one"
   	    android:layout_marginLeft="10dp"
   	    android:id="@+id/iv_cash"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:src="@drawable/home_cash_selecor"
   	    android:layout_toRightOf="@+id/layout_one"
   	    />
   	<LinearLayout 
   	    android:layout_alignTop="@+id/layout_one"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical"
   	    android:id="@+id/layout_two"
   	    android:layout_marginLeft="10dp"
   	    android:layout_toRightOf="@+id/iv_cash"
  
   	    >
   	    <ImageView 
   	        android:id="@+id/iv_message"
   	        android:layout_width="match_parent"
   	        android:layout_weight="1"
   	        android:layout_height="0dp"
   	        android:src="@drawable/home_message_selector"
   	        />
   	    <ImageView 
   	        android:id="@+id/iv_pos"
   	        android:layout_weight="1"
   	        android:layout_height="0dp"
   	        android:layout_marginTop="10dp"
   	        android:layout_width="match_parent"
   	        android:src="@drawable/home_pos_selector"
   	        />
   	</LinearLayout>
   	<LinearLayout 
   	    android:layout_alignTop="@+id/layout_one"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:orientation="vertical"
   	    android:id="@+id/layout_three"
   	    android:layout_marginLeft="10dp"
   	    android:layout_toRightOf="@+id/layout_two"
   	 
   	    >
   	    <ImageView 
   	        android:id="@+id/iv_services"
   	        android:layout_width="match_parent"
   	        android:layout_weight="1"
   	        android:layout_height="0dp"
   	        android:src="@drawable/home_services_selector"
   	        />
   	    <ImageView 
   	        android:id="@+id/iv_logout"
   	        android:layout_weight="1"
   	        android:layout_height="0dp"
   	        android:layout_marginTop="8dp"
   	        android:layout_width="match_parent"
   	        android:src="@drawable/home_logout_selector"
   	        />
   	</LinearLayout>
</RelativeLayout>