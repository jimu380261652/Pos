<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="vertical"
    android:background="@drawable/btn_white">

    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text"
        android:textColor="@color/black"
        android:text="商品入库信息"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="6dp"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="条形码"/>
        <EditText android:id="@+id/et_stock_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请扫描或输入条形码"/>
    </LinearLayout>
   <!-- <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="编码"/>
        <EditText android:id="@+id/et_stock_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品编码"/>
    </LinearLayout> -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="名称"/>
        <EditText android:id="@+id/et_stock_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品名称"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="规格"/>
        <EditText android:id="@+id/et_stock_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品规格"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_stock_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="上/下架"/>
        <TextView android:id="@+id/tv_stock_status"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/stock_text"
            android:gravity="left"
            android:text="上架"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/ll_stock_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="商品类型"/>
        <TextView android:id="@+id/tv_stock_type"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/stock_text"
            android:gravity="left"
            />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="进货价"/>
        <EditText android:id="@+id/et_stock_priceIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品进货价"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="售价"/>
        <EditText android:id="@+id/et_stock_salePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品售价"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="库存数量"/>
        <EditText android:id="@+id/et_stock_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品库存数量"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/layout_stock">
        <TextView android:layout_width="@dimen/radio_text_width"
            android:layout_height="wrap_content"
            style="@style/stock_text"
            android:text="新增数量"/>
        <EditText android:id="@+id/et_stock_newNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/stock_edittext"
            android:hint="请输入商品新增数量"/>
    </LinearLayout>
	<LinearLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:paddingTop="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/light_gray">
        <TextView android:id="@+id/tv_dialog_cancel"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginRight="1dp"
            android:textSize="@dimen/small_text"
            android:textColor="@color/light_gray"
            android:gravity="center"
            android:text="取消"/>
        <TextView android:id="@+id/tv_dialog_confirm"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:textSize="@dimen/small_text"
            android:textColor="@color/skyblue"
            android:gravity="center"
            android:text="确定"/>
    </LinearLayout>
</LinearLayout>
