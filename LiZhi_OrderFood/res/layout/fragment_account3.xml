<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <LinearLayout 
        android:id="@+id/ll_account3_bank"
        android:layout_width="500dp"
        android:layout_height="@dimen/edittext_height"
		android:background="@drawable/login_edit"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="50dp"
		android:gravity="center_vertical"
		android:padding="9dp">
		<ImageView 
        android:id="@+id/iv_account3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gs"/>
    	<LinearLayout
        android:layout_marginLeft="9dp" 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="vertical">
		<TextView 
	    android:id="@+id/tv_account3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="@color/black"
	    android:textSize="@dimen/normal_text"
	    android:text="中国工商银行"/>
		<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"/>
		</LinearLayout>
        <ImageView 
            android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_account3_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_account3_bank"
        android:layout_marginTop="17dp"
        android:layout_alignLeft="@id/ll_account3_bank" >
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:textColor="@color/light_gray"
        	android:text="可提现金额："/>
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:textColor="@color/light_red"
        	android:text="2000"/>
    	<TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:textColor="@color/light_gray"
        	android:text="元"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_account3_edit"
        android:layout_marginTop="17dp"
        android:layout_width="500dp"
        android:layout_height="@dimen/edittext_height"
		android:background="@drawable/login_edit"
		android:layout_alignLeft="@id/ll_account3_bank"
		android:layout_below="@id/ll_account3_cash"
		android:gravity="center_vertical" >
    	<TextView 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_marginLeft="10dp"
    	    android:text="金额"
    	    android:textColor="@color/text_color"
    	    android:textSize="@dimen/normal_text"/>
    	<EditText 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:hint="请输入提现金额"
    	    android:textSize="@dimen/normal_text"
    	    android:textColor="@color/light_gray"
    	    android:layout_marginLeft="30dp"
    	    android:background="@null"/>
    </LinearLayout>
    <Button 
        android:id="@+id/bt_account3_pay"
        android:layout_width="500dp"
        android:layout_height="@dimen/edittext_height"
        android:background="@drawable/btn_blue_selector"
        android:layout_alignLeft="@id/ll_account3_bank"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ll_account3_edit"
        android:text="立即提现"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text"/>
</RelativeLayout>

