<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.pos.lizhimain"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical" xmlns:app1="http://schemas.android.com/apk/res/com.pos.lizhiorder">
	<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_height"
        android:background="@color/item_title_color">
    <RadioGroup 
        android:layout_marginLeft="50dp"
        android:id="@+id/rg_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RadioButton 
            android:id="@+id/rb_order"
            android:layout_width="@dimen/radio_text_width"
            android:layout_height="100dp"
            android:text="订单消息"
            android:textColor="@color/radio_text_selector"
	        android:textSize="@dimen/normal_text"
            android:button="@null"
            android:gravity="center"/>
        
    </RadioGroup>
	 <com.lizhi.widget.UnderlinePageIndicator 
	    	android:layout_marginLeft="50dp"
    	    android:id="@+id/indicator_message"
    	    android:layout_width="120dp"
    	    android:layout_height="4dp"
    	    android:layout_gravity="bottom"    	    
    	     
    	    app1:fades="false"
    	    app1:selectedColor="@color/skyblue"/> 
	</FrameLayout>
	<android.support.v4.view.ViewPager
        android:id="@+id/vp_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>